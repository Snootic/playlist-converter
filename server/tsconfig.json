{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@types": ["../common/types/index"],
      "@common/*": ["../common/*"],
    }
  },
  "include": ["src/**/*", "../common/types/**/*", "src/utils/detectSource.ts"],
  "exclude": ["node_modules", "dist"]
}